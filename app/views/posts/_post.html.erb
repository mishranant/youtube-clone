<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
      
      <a href=<%= post_path(post) %> >
        <%= image_tag(post.image, style: 'width:auto; height:500px') %> 
      </a>
  </p>

</div>